---
import Layout from '../../layouts/Layout.astro';
const title = "Dahua CCTV Solutions for Critical Infrastructure Protection in Saudi Arabia – Advanced Security for Key Sectors";
const description = "Safeguard Saudi Arabia’s critical infrastructure with Dahua’s state-of-the-art CCTV solutions. As a trusted provider, we deliver high-performance surveillance systems designed to secure essential sectors, including energy, transportation, and government facilities. Dahua’s intelligent CCTV technology offers 24/7 monitoring, advanced AI-powered analytics, and real-time threat detection to ensure the highest level of security. Our robust cameras are built to withstand harsh environments while providing crystal-clear imagery even in low-light conditions. With features like remote monitoring, smart alerts, and scalable network integration, Dahua CCTV systems are tailored for the unique demands of critical infrastructure, ensuring protection against potential threats and maintaining operational integrity.";
---

<Layout title={title} description={description}>
 <!-- Hero Section -->
 <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0">
    <img 
      src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTzaGr2aCPm5E0cXuYsevcdLz6D4wLBjDExZA&s" 
      alt="Critical Infrastructure" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900/95 to-black/80"></div>
  </div>
  
  <div class="relative container mx-auto px-4 py-20 text-center text-white">
    <span class="inline-block px-6 py-2 bg-blue-500/20 text-blue-200 text-sm font-medium rounded-full mb-8 backdrop-blur-sm">
      Critical Infrastructure Protection
    </span>
    <h1 class="text-6xl md:text-7xl font-bold mb-8 animate-fade-in">
      Securing What Matters Most
    </h1>
    <p class="text-xl md:text-2xl text-gray-200 mb-12 max-w-3xl mx-auto animate-fade-in-delay leading-relaxed">
      Advanced security solutions for protecting vital infrastructure assets
    </p>
    <a href="#solutions" class="inline-block px-8 py-4 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
      Explore Solutions
    </a>
  </div>
</section>

<!-- Solutions Section -->
<section id="solutions" class="py-24">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          {
            title: "Surveillance Systems",
            description: "Advanced 4K and thermal imaging cameras for comprehensive facility monitoring",
            image: "https://img.freepik.com/free-vector/internet-things-iot-smart-connection-control-device-network-industry-resident-anywhere-anytime-anybody-any-business-with-internet-it-technology-futuristic-world_1150-61200.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
            gradient: ""
          },
          {
            title: "Access Control",
            description: "End-to-end security solutions with smart access management",
            image: "https://img.freepik.com/free-photo/person-using-smartphone-his-automated-home_23-2149036905.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
            gradient: ""
          },
          {
            title: "Thermal Monitoring",
            description: "Preventive maintenance through thermal inspection and analytics",
            image: "https://img.freepik.com/free-photo/people-colorful-thermal-scan-with-celsius-degree-temperature_23-2149170130.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
            gradient: ""
          }
        ].map(solution => (
          <div class="group relative overflow-hidden rounded-2xl shadow-xl">
            <div class="absolute inset-0">
              <img 
                src={solution.image}
                alt={solution.title}
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
              />
              <div class={`absolute inset-0 bg-gradient-to-br ${solution.gradient} opacity-90 group-hover:opacity-95 transition-opacity duration-300`}></div>
            </div>
            <div class="relative p-8 h-96 flex flex-col justify-end text-white">
              <h3 class="text-2xl font-bold mb-4">{solution.title}</h3>
              <p class="text-white/90">{solution.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<!-- Industry Section -->
<section class="py-24 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-16">Industries We Protect</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {[
        {
          title: "Oil & Gas",
          description: "Comprehensive security for critical oil and gas infrastructure",
          image: "https://img.freepik.com/free-photo/close-up-communication-tower_1268-15209.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
          link: "/Critical-Infrastructure/oil-and-gas"
        },
        {
          title: "Electricity",
          description: "Advanced protection for power generation and distribution facilities",
          image: "https://img.freepik.com/free-photo/workers-control-room_1359-129.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
          link: "/Critical-Infrastructure/electricity"
        },
        {
          title: "Telecommunication",
          description: "Securing vital communication infrastructure and data centers",
          image: "https://img.freepik.com/free-photo/men-working-inside-modern-factory-with-robotic-arm-generated-by-ai_24640-84754.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
          link: "/Critical-Infrastructure/telecommunication"
        }
      ].map(industry => (
        <div class="group bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300">
          <div class="relative h-72">
            <img 
              src={industry.image} 
              alt={industry.title}
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
            <div class="absolute bottom-0 p-6 text-white">
              <h3 class="text-2xl font-bold mb-2">{industry.title}</h3>
              <p class="text-gray-200 mb-4">{industry.description}</p>
              <a 
                href={industry.link}
                class="inline-flex items-center text-blue-400 hover:text-blue-300 transition-colors"
              >
                Learn More
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  .animate-fade-in-delay {
    animation: fadeIn 1s ease-out 0.3s;
    opacity: 0;
    animation-fill-mode: forwards;
  }
</style>
</Layout>
---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Mobile Vehicles Solutions">
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-r from-blue-50 via-blue-100 to-blue-50">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,...'); background-repeat: repeat;"></div>
    </div>

    <div class="container mx-auto px-4 py-20">
      <div class="flex flex-col md:flex-row items-center gap-16 relative">
        <!-- Content Side -->
        <div class="md:w-1/2 space-y-8 animate-fadeIn">
          <div class="space-y-4">
            <span class="text-blue-600 font-semibold tracking-wider uppercase text-sm">Transportation Solutions</span>
            <h1 class="text-5xl font-bold text-gray-800 leading-tight">
              Smart Public Bus
              <span class="text-blue-600">Solutions</span>
            </h1>
          </div>
          
          <p class="text-gray-600 text-lg leading-relaxed">
            Public buses, being a major part of public transportation systems, are the lifeblood of cities, fulfilling an important role in sustaining populous cities.
          </p>
          
          <div class="flex flex-wrap gap-4">
            <button 
              class="group bg-blue-600 text-white px-8 py-4 rounded-lg hover:bg-blue-700 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-xl flex items-center gap-3"
              id="downloadBrochureButton"
            >
              <span>Download Brochure</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Image Side -->
        <div class="md:w-1/2 relative">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl transform hover:scale-105 transition-transform duration-500">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-transparent z-10"></div>
            <img 
              src="/src/assets/Transportation/img1.png" 
              alt="Public Bus Solution" 
              class="w-full h-auto rounded-2xl"
            >
            <!-- Floating Elements -->
            <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-lg p-3 shadow-lg z-20">
              <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                <span class="text-sm font-medium text-gray-700">Live Monitoring</span>
              </div>
            </div>
          </div>
          
          <!-- Decorative Elements -->
          <div class="absolute -z-10 -bottom-6 -right-6 w-24 h-24 bg-blue-200 rounded-full opacity-50"></div>
          <div class="absolute -z-10 -top-6 -left-6 w-32 h-32 bg-blue-100 rounded-full opacity-50"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Solution Overview -->
  <section class="py-16 bg-gradient-to-r from-blue-50 via-white to-blue-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Solution Overview</h2>
      <div class="max-w-4xl mx-auto">
        <img src="/src/assets/MobileVechiles/imgsol.png" alt="Solution Overview" class="rounded-xl shadow-lg w-full">
      </div>
    </div>
  </section>

  <!-- Solution Details -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-4">Solution Details</h2>
      <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">Discover our comprehensive range of mobile vehicle solutions designed for optimal performance and security.</p>
      
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4">
        {[
          {
            title: "Alarm System and Crash Detection System",
            desc: "Advanced alarm system for real-time monitoring and crash detection.",
            img: "/src/assets/MobileVechiles/img1.png"
          },
          {
            title: "Fare Fraud Prevention",
            desc: "AI-powered system to prevent fare fraud and enhance customer safety.",
            img: "/src/assets/MobileVechiles/img2.png"
          },
          {
            title: "Fleet Tracking",
            desc: "Real-time tracking and monitoring system for efficient fleet management.",
            img: "/src/assets/MobileVechiles/img3.png"
          },
          {
            title: "Speed Alert and Passenger Counting",
            desc: "Alerts for speed violations and real-time passenger counting.",
            img: "/src/assets/MobileVechiles/img4.png"
          },
          {
            title: "Cost effective network transformation",
            desc: "Efficient and cost-effective network transformation for mobile transportation.",
            img: "/src/assets/MobileVechiles/img5.png"
          }
        ].map((solution) => (
          <div class="group relative bg-white rounded-[24px] p-8 hover:bg-gradient-to-br from-blue-100 via-purple-50 to-indigo-100 transition-all duration-500 border border-gray-100 hover:border-indigo-200 hover:shadow-2xl transform hover:-translate-y-2">
            <div class="absolute -top-8 left-8">
              <img src={solution.img} alt={solution.title} class="w-16 h-16 object-contain"/>
            </div>
            <h3 class="text-xl font-bold mb-3 text-gray-800">{solution.title}</h3>
            <p class="text-gray-600">{solution.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Key Technology -->
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-4">Key Technology</h2>
      <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">Discover our cutting-edge technologies that power the future of mobile transportation</p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {[
          {
            title: "Anti-vibration",
            desc: "When the vehicle is running on the road, the onboard shock and vibration are the main causes of HDD damage and video footage loss. Dahua mobile devices comply with ISO 16750-3",
            img: "/src/assets/MobileVechiles/key1.png",
            link: "/technology/anti-vibration"
          },
          {
            title: "Power-off Protection",
            desc: "Super-capacitor is applied to achieve smooth swith off in case of sudden system power down thus to avoid data loss and extend the",
            img: "/src/assets/MobileVechiles/key2.png",
            link: "/technology/anti-vibration"
          },
          {
            title: "Temperature Protection",
            desc: "Working temperature: -30°C (heater optional) ~ +60°C to cater extreme working conditions inside the vehicle.",
            img: "/src/assets/MobileVechiles/key3.png",
            link: "/technology/anti-vibration"
          },
          {
            title: "Water and Dust Resistant",
            desc: "Dahua offers the cameras corresponding to water and dust resistant, with IP6K9K-rating.",
            img: "/src/assets/MobileVechiles/key4.png",
            link: "/technology/anti-vibration"
          },
          {
            title: "G-sensor",
            desc: "Built-in G-sensor inside can help users to detect the vehicle turnover and collision immediately.",
            img: "/src/assets/MobileVechiles/key5.png",
            link: "/technology/anti-vibration"
          },
          {
            title: "Smart Scene Adaptive",
            desc: "Dahua unique image processing technology makes the camera to suit different light conditions automatically.",
            img: "/src/assets/MobileVechiles/key6.png",
            link: "/technology/anti-vibration"
          },
          {
            title: "WDR",
            desc: "The WDR function is extremely useful in vehicle doors and spaces near windows to get clear enough images. Up to 120dB Wide Dynamic Range to capture a optimized image quality even",
            img: "/src/assets/MobileVechiles/key7.png",
            link: "/technology/anti-vibration"
          }
        ].map((tech) => (
          <div class="group relative bg-white rounded-[24px] p-8 hover:bg-gradient-to-br from-blue-100 via-purple-50 to-indigo-100 transition-all duration-500 border border-gray-100 hover:border-indigo-200 hover:shadow-2xl transform hover:-translate-y-2">
            <div class="absolute -top-8 left-8">
              <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl shadow-lg shadow-indigo-200/50 flex items-center justify-center transform group-hover:scale-110 group-hover:rotate-6 transition-all duration-500">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
            </div>

            <div class="relative w-full h-40 mb-8 mt-6 rounded-2xl overflow-hidden group-hover:shadow-lg transition-all duration-500">
              <img 
                src={tech.img}
                alt={tech.title}
                class="w-full h-full object-contain transform group-hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>

            <div class="space-y-4">
              <h3 class="font-bold text-2xl text-gray-800 group-hover:text-blue-700 transition-colors duration-300">
                {tech.title}
              </h3>
              <p class="text-gray-600 text-base leading-relaxed group-hover:text-gray-700">
                {tech.desc}
              </p>
              
              <div class="pt-6">
                <a href={tech.link} class="inline-flex items-center text-blue-600 font-semibold group-hover:text-blue-700">
                  Learn More
                  <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </div>

            <div class="absolute -z-10 -bottom-4 -right-4 w-24 h-24 bg-indigo-100 rounded-full opacity-0 group-hover:opacity-50 transition-opacity duration-500"></div>
            <div class="absolute -z-10 -top-4 -left-4 w-20 h-20 bg-purple-100 rounded-full opacity-0 group-hover:opacity-50 transition-opacity duration-500"></div>
          </div>
        ))}
      </div>
    </div>
  </section>
<script>
 function downloadBrochure() {
    const link = document.createElement('a');
    link.href = '/src/assets/MobileVechiles/brousher.pdf'; // Path to the brochure file
    link.download = 'brousher.pdf';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  }
  const downloadButton = document.getElementById('downloadBrochureButton');
  if (downloadButton) {
    downloadButton.addEventListener('click', downloadBrochure);
  }
</script>
</script>
</Layout>

<style>
  .aspect-w-16 {
    position: relative;
    padding-bottom: 56.25%;
  }
  .aspect-w-16 img {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    object-fit: cover;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.8s ease-out forwards;
  }
</style>
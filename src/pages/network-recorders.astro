---
import Layout from '../layouts/Layout.astro';
const title = "Leading Dahua CCTV Network Recorders Distributor in Saudi Arabia – High-Performance Surveillance Solutions"
const description = "As the top wholesale distributor of Dahua CCTV network recorders in Saudi Arabia, we provide state-of-the-art solutions for secure, efficient, and reliable surveillance systems. Our extensive product range includes advanced network recorders with AI-powered features, real-time monitoring, and high-capacity storage, ensuring uninterrupted video recording and data security. Whether for residential, commercial, or industrial environments, Dahua’s network recorders are designed to handle the most demanding surveillance tasks. With robust IP compatibility, seamless integration with other security devices, and advanced video analytics, our recorders set a new standard for high-performance surveillance solutions across the region. Trust Dahua for powerful, next-generation network recording technology."

const products = [
  {
    title: "WizMind Series",
    image: "https://img.freepik.com/free-psd/modern-white-security-cctv-camera-isolated-transparent-background_84443-26526.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
    description: "Advanced AI-powered network video recorders",
    features: ["AI Analytics", "256 Channels", "4K Recording"],
    link: "/network-cameras/WizMind-Series"
  },
  {
    title: "WizSense Series",
    image: "https://img.freepik.com/free-psd/home-security-surveillance-cctv-camera-icon-isolated-3d-render-illustration_47987-6470.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
    description: "Intelligent surveillance recording solution",
    features: ["Smart Detection", "Cloud Storage", "Real-time Alerts"],
    link: "network-cameras/WizSense-Series"
  },
  {
    title: "Special Series",
    image: "https://img.freepik.com/free-psd/modern-white-security-cctv-camera-isolated-transparent-background_84443-26526.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
    description: "High-performance recording capabilities",
    features: ["H.265+", "POS Integration", "High Throughput"],
    link: "/network-cameras/Special-Series"
  },
  {
    title: "Pro Series",
    image: "https://img.freepik.com/free-psd/modern-white-security-camera-with-black-lens-transparent-background_84443-27554.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
    description: "Professional-grade surveillance recording",
    features: ["128 Channels", "RAID Support", "Hot-Swap HDD"],
    link: "/network-cameras/Pro-Series"
  },
  {
    title: "Lite Series",
    image: "https://img.freepik.com/free-psd/cctv-cameras-isolated-poles-tech-setting-isolated-transparent-background_191095-17094.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
    description: "Cost-effective recording solution",
    features: ["32 Channels", "Easy Setup", "Mobile View"],
    link: "/network-cameras/Lite-Series"
  },
  {
    title: "WizMind X Series",
    image: "https://img.freepik.com/free-psd/highdefinition-security-cameras-advanced-surveillance-system_191095-84341.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid",
    description: "High-speed solid state recording",
    features: ["SSD Storage", "Ultra-Fast", "4K 60fps"],
    link: "/network-cameras/WizMindX-Series"
  }
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative h-[90vh] overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://img.freepik.com/free-photo/ceiling-with-round-light-that-says-word-emergency-it_188544-27875.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid"
        alt="Network Video Recorders" 
        class="w-full h-full object-cover transform scale-105 animate-slow-zoom"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-gray-900/95 via-gray-900/85 to-transparent"></div>
      <div class="absolute inset-0 bg-[url('/src/assets/patterns/grid.svg')] opacity-10"></div>
    </div>
    
    <div class="relative container mx-auto px-4 h-full flex items-center">
      <div class="max-w-2xl text-white space-y-8">
        <span class="inline-flex items-center px-5 py-2.5 bg-blue-500/20 rounded-full text-blue-200 text-sm font-medium backdrop-blur-sm animate-fade-in-up">
          <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 animate-pulse"></span>
          Advanced Recording Solutions
        </span>
        
        <h1 class="text-6xl font-bold leading-tight animate-fade-in-up">
          Network Video
          <span class="block mt-2 bg-gradient-to-r from-blue-400 to-blue-200 bg-clip-text text-transparent">
            Recorders
          </span>
        </h1>
        
        <p class="text-xl text-blue-100/90 animate-fade-in-up delay-200 max-w-xl leading-relaxed">
          High-performance NVR solutions with AI capabilities and flexible storage options
        </p>
      </div>
    </div>
  </section>

  <!-- Overview Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-4">Overview</h2>
          <div class="w-24 h-1 bg-blue-600 mx-auto rounded-full"></div>
        </div>
        
        <p class="text-lg text-gray-600 leading-relaxed">
          Dahua's comprehensive range of network video recorders offers solutions for every need - from small businesses to enterprise-scale deployments. With advanced features like AI analytics, cloud integration, and flexible storage options, our NVRs ensure reliable and efficient video management.
        </p>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-24 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-bold mb-4">Our Solutions</h2>
        <div class="w-24 h-1 bg-blue-600 mx-auto rounded-full mb-6"></div>
        <p class="text-gray-600 text-lg">Advanced recording solutions for every surveillance need</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {products.map(product => (
          <div class="group bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
           <div class="relative aspect-[4/3] overflow-hidden bg-gray-100 p-6">
  <img 
    src={product.image} 
    alt={product.title}
    class="w-full h-full object-contain transform group-hover:scale-105 transition-all duration-500"
  />
<div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
            
            <div class="p-8">
              <h3 class="text-2xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors mb-3">
                {product.title}
              </h3>
              <p class="text-gray-600 mb-6">{product.description}</p>
              
              <div class="space-y-3 mb-8">
                {product.features.map(feature => (
                  <div class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span>{feature}</span>
                  </div>
                ))}
              </div>

              <a 
                href={product.link}
                class="inline-flex items-center justify-center w-full px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all duration-300 shadow-md hover:shadow-xl group"
              >
                Learn More
                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 1s ease-out forwards;
  }

  .animate-slow-zoom {
    animation: slowZoom 20s ease-out forwards;
  }

  .delay-200 {
    animation-delay: 200ms;
  }

  @keyframes fadeInUp {
    from { 
      opacity: 0; 
      transform: translateY(20px);
    }
    to { 
      opacity: 1; 
      transform: translateY(0);
    }
  }

  @keyframes slowZoom {
    from { transform: scale(1); }
    to { transform: scale(1.1); }
  }
</style>

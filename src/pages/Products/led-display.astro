---
import Layout from '../../layouts/Layout.astro';

const highlights = [
  {
    id: "01",
    title: "XEB Series",
    content: "Premium indoor LED display with ultra-fine pixel pitch, delivering exceptional visual clarity and brightness for high-end installations.",
    image: "https://images.unsplash.com/photo-1542751371-adc38448a05e?w=800&auto=format&fit=crop"
  },
  {
    id: "02",
    title: "U Series",
    content: "Versatile LED solution perfect for retail and corporate environments, featuring seamless connectivity and smart content management.",
    image: "https://images.freepik.com/free-photo/digital-screen-with-neon-lights_23-2149264110.jpg"
  },
  {
    id: "03",
    title: "FE Series",
    content: "Fixed exterior LED displays engineered for outdoor durability, offering stunning visuals in any weather condition.",
    image: "https://images.unsplash.com/photo-1540575339264-569259387a45?w=800&auto=format&fit=crop"
  },
  {
    id: "04",
    title: "RE/RL Series",
    content: "Rental LED displays designed for quick assembly and robust performance in live events and temporary installations.",
    image: "https://images.freepik.com/free-photo/outdoor-led-screen-building_23-2150911795.jpg"
  },
  {
    id: "05",
    title: "KE2 Series",
    content: "Compact LED solutions ideal for control rooms and meeting spaces, with superior color accuracy and viewing angles.",
    image: "https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?w=800&auto=format&fit=crop"
  }
];
---

<Layout title="LED Displays - Dahua Saudi">
  <div class="bg-white" x-data="{ activeSection: '01' }">
    <!-- Header Image -->
    <div class="relative h-[60vh] overflow-hidden">
      <img
        src="https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?q=80&w=2070&auto=format&fit=crop"
        alt="Interactive Display Header"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
        <h1 class="text-5xl font-bold text-white text-center">
          LED Displays
          <span class="block text-2xl mt-4 font-normal">Transform your visual experience with our cutting-edge LED display solutions</span>
        </h1>
      </div>
    </div>

    <!-- Highlights Section -->
    <div class="max-w-7xl mx-auto px-4 py-16">
      <h2 class="text-3xl font-bold text-center mb-16">
        Highlights
        <span class="block text-lg font-normal text-gray-600 mt-2">Discover our comprehensive range of LED solutions</span>
      </h2>

      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Sidebar Navigation -->
        <div class="lg:w-1/4">
          <div class="sticky top-8">
            <nav class="space-y-2">
              {highlights.map((item) => (
                <button
                  class="w-full text-left px-4 py-3 rounded-lg hover:bg-gray-100 transition-colors duration-200"
                  id={`nav-${item.id}`}
                  data-section={item.id}
                >
                  <span class="text-blue-600 font-semibold">{item.id}</span>
                  <span class="ml-2 text-gray-700">{item.title}</span>
                </button>
              ))}
            </nav>
          </div>
        </div>

        <!-- Content Section -->
        <div class="lg:w-3/4">
          {highlights.map((item) => (
            <div 
              id={`content-${item.id}`} 
              class="hidden opacity-0 transition-opacity duration-300"
              style={item.id === "01" ? "display: block; opacity: 1;" : ""}
            >
              <div class="grid md:grid-cols-2 gap-8 items-center">
                <div class="order-2 md:order-1">
                  <span class="text-blue-600 text-lg font-semibold">{item.id}</span>
                  <h3 class="text-2xl font-bold text-gray-900 mt-2 mb-4">{item.title}</h3>
                  <p class="text-gray-600 leading-relaxed">{item.content}</p>
                </div>
                <div class="order-1 md:order-2">
                  <img
                    src={item.image}
                    alt={item.title}
                    class="rounded-xl shadow-lg w-full h-64 object-cover"
                    loading="lazy"
                  />
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Products Section -->
    <div class="max-w-7xl mx-auto px-4 py-16 bg-gray-50">
      <h2 class="text-3xl font-bold text-center mb-16">
        Our Products
        <span class="block text-lg font-normal text-gray-600 mt-2">Explore our comprehensive range of LED displays</span>
      </h2>

      <div class="flex flex-col lg:flex-row gap-8">
        <!-- Sidebar with filters -->
        <div class="w-full lg:w-64 flex-shrink-0">
          <div class="bg-white rounded-lg shadow-md p-4 sticky top-8">
            <h3 class="text-xl font-semibold mb-4">Categories</h3>
            
            <!-- Product Filters -->
            <div class="mb-6 space-y-3">
              <label class="flex items-center space-x-2 cursor-pointer">
                <input 
                  type="radio" 
                  name="filter" 
                  value="all" 
                  checked 
                  class="form-radio"
                >
                <span>All Products</span>
              </label>
              <label class="flex items-center space-x-2 cursor-pointer">
                <input 
                  type="radio" 
                  name="filter" 
                  value="xeb" 
                  class="form-radio"
                >
                <span>XEB Series</span>
              </label>
              <label class="flex items-center space-x-2 cursor-pointer">
                <input 
                  type="radio" 
                  name="filter" 
                  value="cdvu" 
                  class="form-radio"
                >
                <span>U Series</span>
              </label>
            </div>

            <!-- Category Links -->
            <div class="space-y-2 pt-4 border-t border-gray-200">
              <a 
                href="/products/commercial-display" 
                class="block px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
              >
                Commercial Display
              </a>
              <a 
                href="/products/rental" 
                class="block px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
              >
                Rental
              </a>
              <a 
                href="/products/dooh" 
                class="block px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
              >
                DOOH
              </a>
            </div>
          </div>
        </div>

        <!-- Product Grid -->
        <div class="flex-1">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {[
              {
                id: 'xeb-p15',
                name: 'XEB Series P1.5',
                description: 'Indoor Fine Pixel LED Display with ultra-high resolution and brilliant color accuracy.',
                image: 'https://images.unsplash.com/photo-1542751371-adc38448a05e?w=800',
                category: 'xeb',
                features: ['4K Resolution', 'HDR Support', 'Fine Pixel Pitch'],
                price: 'Contact for Price'
              },
              {
                id: 'xeb-p12',
                name: 'XEB Series P1.2',
                description: 'Premium indoor LED display with superior image quality and color reproduction.',
                image: 'https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?w=800',
                category: 'xeb',
                features: ['8K Resolution', 'High Refresh Rate', 'Wide Color Gamut'],
                price: 'Contact for Price'
              },
              {
                id: 'xeb-p18',
                name: 'XEB Series P1.8',
                description: 'Professional LED display solution for high-end indoor applications.',
                image: 'https://images.unsplash.com/photo-1542751371-adc38448a05e?w=800',
                category: 'xeb',
                features: ['4K Resolution', 'High Brightness', 'Low Power'],
                price: 'Contact for Price'
              },
              {
                id: 'u-p09',
                name: 'U Series P0.9',
                description: 'Ultra-fine pixel pitch LED display for premium viewing experience.',
                image: 'https://images.unsplash.com/photo-1542751371-adc38448a05e?w=800',
                category: 'cdvu',
                features: ['Ultra Fine Pitch', 'High Contrast', 'Wide Viewing Angle'],
                price: 'Contact for Price'
              },
              {
                id: 'u-p12',
                name: 'U Series P1.2',
                description: 'Versatile LED display for corporate and retail environments.',
                image: 'https://images.unsplash.com/photo-1542751371-adc38448a05e?w=800',
                category: 'cdvu',
                features: ['4K Resolution', 'AI Enhancement', 'Easy Installation'],
                price: 'Contact for Price'
              },
              {
                id: 'u-p15',
                name: 'U Series P1.5',
                description: 'Professional LED display with advanced features and reliability.',
                image: 'https://images.unsplash.com/photo-1542751371-adc38448a05e?w=800',
                category: 'cdvu',
                features: ['High Brightness', 'Wide Viewing Angle', 'HDR Support'],
                price: 'Contact for Price'
              }
            ].map(product => (
              <div 
                class="bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:-translate-y-1"
                data-category={product.category}
                style="opacity: 0; transform: translateY(20px);"
              >
                {/* Product Image */}
                <div class="relative h-48 overflow-hidden">
                  <img 
                    src={product.image} 
                    alt={product.name}
                    class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-500"
                  />
                  <div class="absolute top-2 right-2">
                    <span class="px-2 py-1 text-xs font-semibold bg-blue-600 text-white rounded-full">
                      {product.category.toUpperCase()}
                    </span>
                  </div>
                </div>

                {/* Product Content */}
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">{product.name}</h3>
                  <p class="text-gray-600 mb-4 line-clamp-2">{product.description}</p>
                  
                  <div class="flex flex-wrap gap-2 mb-6">
                    {product.features.map(feature => (
                      <span class="px-3 py-1 text-xs bg-blue-50 text-blue-600 rounded-full font-medium">
                        {feature}
                      </span>
                    ))}
                  </div>
                  
                  <div class="flex items-center justify-between mt-auto">
                    <span class="text-blue-600 font-semibold">{product.price}</span>
                    <a 
                      href={`/products/led-display/${product.id}`}
                      class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors group"
                    >
                      Read More
                      <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('[data-section]');
    const sections = document.querySelectorAll('[id^="content-"]');
    
    // Add click handlers to all buttons
    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const sectionId = button.getAttribute('data-section');
        switchSection(sectionId);
      });
    });

    function switchSection(id: string | null) {
      // First, fade out all sections
      sections.forEach(section => {
        if (section instanceof HTMLElement) {
          section.style.opacity = '0';
        }
      });

      // Remove active class from all buttons
      buttons.forEach(btn => {
        btn.classList.remove('bg-blue-50');
      });

      // After fade out, hide all sections and show the selected one
      setTimeout(() => {
        sections.forEach(section => {
          if (section instanceof HTMLElement) {
            section.style.display = 'none';
          }
        });

        const selectedSection = document.getElementById(`content-${id}`);
        const selectedButton = document.querySelector(`[data-section="${id}"]`);

        if (selectedSection instanceof HTMLElement) {
          selectedSection.style.display = 'block';
          // Force reflow
          selectedSection.offsetHeight;
          selectedSection.style.opacity = '1';
        }

        if (selectedButton) {
          selectedButton.classList.add('bg-blue-50');
        }
      }, 300);
    }

    // Show first section by default
    const firstButton = document.querySelector('[data-section="01"]');
    if (firstButton) {
      firstButton.classList.add('bg-blue-50');
    }

    // Product filtering
    const filterRadios = document.querySelectorAll('input[name="filter"]');
    const productCards = document.querySelectorAll('[data-category]');

    function filterProducts(category: string) {
      productCards.forEach(card => {
        const productCategory = (card as HTMLElement).dataset.category;
        if (category === 'all' || productCategory === category) {
          (card as HTMLElement).style.display = 'block';
          setTimeout(() => {
            (card as HTMLElement).style.opacity = '1';
            (card as HTMLElement).style.transform = 'translateY(0)';
          }, 50);
        } else {
          (card as HTMLElement).style.opacity = '0';
          (card as HTMLElement).style.transform = 'translateY(20px)';
          setTimeout(() => {
            (card as HTMLElement).style.display = 'none';
          }, 300);
        }
      });
    }

    filterRadios.forEach(radio => {
      radio.addEventListener('change', (e) => {
        const target = e.target as HTMLInputElement | null;
        const selectedCategory = target ? target.value : 'all';
        filterProducts(selectedCategory);
      });
    });

    // Initialize with 'all' filter
    filterProducts('all');
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }

  .fade-content {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  [id^="content-"] {
    transition: opacity 0.3s ease-in-out;
  }

  .bg-blue-50 {
    background-color: rgb(239 246 255);
  }

  .aspect-w-16 {
    position: relative;
    padding-bottom: 56.25%;
    background-color: #f8fafc;
  }

  .aspect-w-16 img {
    object-fit: contain;
    background-color: white;
  }

  .form-radio {
    appearance: none;
    border-radius: 50%;
    width: 1rem;
    height: 1rem;
    border: 2px solid #cbd5e0;
    transition: all 0.2s ease-in-out;
  }

  .form-radio:checked {
    border-color: #2563eb;
    background-color: #2563eb;
  }

  .form-radio:focus {
    outline: none;
    ring: 2px solid #93c5fd;
  }

  .section-title {
    position: relative;
    padding-bottom: 1rem;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: #e5e7eb;
    border-radius: 3px;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .backdrop-blur-sm {
    backdrop-filter: blur(4px);
  }

  .group:hover .group-hover\:h-64 {
    height: 16rem;
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .group:hover .group-hover\:animate-float {
    animation: float 3s ease-in-out infinite;
  }

  [data-category] {
    transition: opacity 0.3s ease-out, transform 0.3s ease-out;
  }

  .filter-enter {
    opacity: 0;
    transform: translateY(20px);
  }

  .filter-enter-active {
    opacity: 1;
    transform: translateY(0);
  }

  .filter-exit {
    opacity: 1;
    transform: translateY(0);
  }

  .filter-exit-active {
    opacity: 0;
    transform: translateY(20px);
  }
</style>

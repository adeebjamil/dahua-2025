---
import Layout from "../layouts/Layout.astro";
const title = "Leading Distributor of Dahua HDCVI Cameras in Saudi Arabia – Advanced CCTV Surveillance Solutions";
const description = "As the premier wholesale distributor of Dahua HDCVI cameras in Saudi Arabia, we provide the latest in high-definition CCTV surveillance technology. Our Dahua HDCVI cameras deliver exceptional image clarity, advanced night vision, and intelligent motion detection, making them ideal for residential, commercial, and industrial security needs. With cutting-edge features like long-range transmission, high performance in low-light conditions, and seamless integration with existing systems, Dahua ensures top-tier surveillance solutions that guarantee safety and peace of mind. Whether you need enhanced video surveillance for small businesses or large-scale installations, our comprehensive range of Dahua HDCVI cameras offers unmatched reliability and innovation in the world of CCTV security."

const products = [
{
    title: "Pro Series",
    description: "High-performance cameras for demanding projects",
    image: "https://plus.unsplash.com/premium_photo-1702598663628-1999320e4670?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjJ8fGNjdHZ8ZW58MHx8MHx8fDE%3D",
    features: ["4K Resolution", "Starlight Technology", "AI-Powered"],
    link: "/network-cameras/Pro-Series"
  },
  {
    title: "Lite Series",
    description: "Cost-effective solution for everyday surveillance",
    image: "https://plus.unsplash.com/premium_photo-1729321201981-5ac62eb1a90b?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTd8fGNjdHZ8ZW58MHx8MHx8fDE%3D",
    features: ["1080P/4MP", "Smart IR", "Wide Dynamic Range"],
    link: "/network-cameras/Lite-Series"
  },
  {
    title: "Panorama Series",
    description: "360° coverage with no blind spots",
    image: "https://plus.unsplash.com/premium_photo-1675016457613-2291390d1bf6?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    features: ["180°/360° View", "Dewarping", "Multiple Display Modes"],
    link: "/network-cameras/Panoramic-Series"
  },
  {
    title: "HDCVI Accessories",
    description: "Complete your surveillance setup",
    image: "https://plus.unsplash.com/premium_photo-1729210234080-dba7771d2389?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fGNjdHZ8ZW58MHx8MHx8fDE%3D",
    features: ["PoC Accessories", "Mounting Brackets", "Power Supplies"],
    link: "/hdcvi-recorders"
  }
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative h-[90vh] overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://images.unsplash.com/photo-1550751827-4bd374c3f58b?auto=format&fit=crop&q=80"
        alt="HDCVI Security Systems" 
        class="w-full h-full object-cover transform scale-105 animate-slow-zoom"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-blue-900/95 via-blue-900/85 to-transparent"></div>
      <div class="absolute inset-0 bg-[url('/src/assets/patterns/grid.svg')] opacity-10"></div>
    </div>
    
    <div class="relative container mx-auto px-4 h-full flex items-center">
      <div class="max-w-2xl text-white space-y-8">
        <span class="inline-flex items-center px-5 py-2.5 bg-blue-500/20 rounded-full text-blue-200 text-sm font-medium backdrop-blur-sm animate-fade-in-up">
          <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 animate-pulse"></span>
          High Definition Composite Video Interface
        </span>
        
        <h1 class="text-6xl font-bold leading-tight animate-fade-in-up">
          HDCVI Cameras
          <span class="block mt-2 bg-gradient-to-r from-blue-400 to-blue-200 bg-clip-text text-transparent">
            Next-Gen Surveillance
          </span>
        </h1>
        
        <p class="text-xl text-blue-100/90 animate-fade-in-up delay-200 max-w-xl leading-relaxed">
          Advanced 4K resolution and AI capabilities over existing coaxial infrastructure
        </p>
      </div>
    </div>
  </section>

  <!-- Overview Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-4">Overview</h2>
          <div class="w-24 h-1 bg-blue-600 mx-auto rounded-full"></div>
        </div>
        
        <p class="text-lg text-gray-600 leading-relaxed">
          As the inventor of HDCVI technology, Dahua leads the industry in high-definition 
          video transmission over coaxial cable. Our HDCVI cameras deliver crystal clear 4K 
          resolution, advanced AI features, and IoT capabilities while leveraging existing 
          infrastructure for cost-effective deployment.
        </p>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-24 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">Our Products</h2>
        <div class="w-24 h-1 bg-blue-600 mx-auto rounded-full"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {products.map(product => (
          <div class="group bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
            <div class="aspect-video overflow-hidden">
              <img 
                src={product.image} 
                alt={product.title}
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              />
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">{product.title}</h3>
              <p class="text-gray-600 mb-4">{product.description}</p>
              
              <ul class="space-y-2 mb-6">
                {product.features.map(feature => (
                  <li class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <a 
                href={product.link}
                class="inline-flex items-center text-blue-600 font-semibold group-hover:text-blue-700"
              >
                Learn more
                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 1s ease-out forwards;
  }

  .animate-slow-zoom {
    animation: slowZoom 20s ease-out forwards;
  }

  .delay-200 {
    animation-delay: 200ms;
  }

  @keyframes fadeInUp {
    from { 
      opacity: 0; 
      transform: translateY(20px);
    }
    to { 
      opacity: 1; 
      transform: translateY(0);
    }
  }

  @keyframes slowZoom {
    from { transform: scale(1); }
    to { transform: scale(1.1); }
  }
</style>

---
import Layout from '../../layouts/Layout.astro';
const title = "Leading Dahua CCTV Solutions for Traffic Management in Saudi Arabia â€“ Advanced Road Safety Monitoring";
const description = "As a top distributor of Dahua CCTV solutions for traffic management in Saudi Arabia, we provide state-of-the-art surveillance systems designed to enhance road safety and efficiency. Dahuaâ€™s intelligent traffic monitoring cameras are equipped with AI-powered analytics and HD video capturing, ensuring real-time tracking and clear imaging even in low-light conditions. Our advanced CCTV systems seamlessly integrate with traffic control platforms, helping to reduce congestion, monitor vehicle speeds, and detect violations with precision. Whether managing busy intersections or highways, Dahuaâ€™s cutting-edge technology offers reliable, 24/7 monitoring for smarter, safer transportation across Saudi Arabiaâ€™s urban and highway infrastructure.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] bg-gradient-to-br from-blue-900 via-indigo-900 to-gray-900 overflow-hidden">
    <div class="absolute inset-0 bg-[url('/src/assets/patterns/traffic-pattern.svg')] opacity-5"></div>
    <div class="container mx-auto px-4 h-full flex items-center">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block px-4 py-1.5 bg-blue-500/20 text-blue-200 text-sm font-medium rounded-full mb-6 animate-fade-in">
          Smart Traffic Solutions
        </span>
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 animate-fade-in-up">
          <span class="bg-gradient-to-r from-blue-400 to-blue-200 bg-clip-text text-transparent">
            Intelligent Traffic Management
          </span>
        </h1>
        <p class="text-xl text-blue-100/90 max-w-2xl mx-auto leading-relaxed animate-fade-in-up delay-100">
          Advanced solutions for safer roads and smarter cities
        </p>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <!-- Feature Cards -->
          {[
            {
              icon: "ðŸš¦",
              title: "Traffic Monitoring",
              description: "Real-time monitoring with AI-powered analytics",
              color: "blue"
            },
            {
              icon: "ðŸš“",
              title: "Violation Detection",
              description: "Automatic detection of traffic violations",
              color: "red"
            },
            {
              icon: "ðŸ“Š",
              title: "Data Analytics",
              description: "Comprehensive traffic flow analysis",
              color: "green"
            }
          ].map(feature => (
            <div class={`bg-${feature.color}-50 rounded-2xl p-8 border border-${feature.color}-100 hover:shadow-xl transition-all duration-300`}>
              <span class="text-4xl mb-4 block">{feature.icon}</span>
              <h3 class="text-xl font-semibold mb-3 text-gray-800">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>

        <!-- Statistics Section -->
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-3xl p-12 text-white">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            {[
              { value: "95%", label: "Accuracy Rate" },
              { value: "24/7", label: "Monitoring" },
              { value: "50%", label: "Accident Reduction" }
            ].map(stat => (
              <div>
                <div class="text-4xl font-bold mb-2">{stat.value}</div>
                <div class="text-blue-100">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>

        <!-- CTA Section -->
        <div class="mt-16 text-center">
          <h2 class="text-3xl font-bold mb-6">Ready to Transform Traffic Management?</h2>
          <a 
            href="/Traffic/traffic-details" 
            class="inline-flex items-center px-8 py-4 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Explore Solutions
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <style>
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .animate-fade-in {
      animation: fadeIn 1s ease-out;
    }

    .animate-fade-in-up {
      animation: fadeIn 1s ease-out;
    }

    .delay-100 {
      animation-delay: 100ms;
    }
  </style>
</Layout>
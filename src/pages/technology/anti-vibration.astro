---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Anti-Vibration Technology">
  <div class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100">
    {/* Hero Section */}
    <div class="relative overflow-hidden bg-gradient-to-r from-blue-600 to-indigo-700 text-white py-24">
      <div class="max-w-7xl mx-auto px-4 text-center relative z-10">
        <h1 class="text-5xl font-bold mb-6 animate-fade-in">Key Technology</h1>
      </div>
      <div class="absolute inset-0 bg-gradient-to-b from-blue-600/20 to-blue-800/20 backdrop-blur-sm"></div>
    </div>

    {/* Features Grid */}
    <div class="max-w-7xl mx-auto px-4 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {/* Anti-vibration Protection */}
        <div class="group bg-white rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <div class="relative">
                <img src="/src/assets/MobileVechiles/key1.png" alt="Anti-vibration Protection" class="w-full h-48 object-contain transition-transform duration-300 group-hover:scale-105"/>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-gray-800">Anti-vibration Protection</h3>
            <ul class="list-disc pl-5 space-y-2 text-gray-600 text-sm">
              <li>ISO 16750-3 compliant</li>
              <li>EN50155 certified</li>
              <li>Protection against electrical surge</li>
              <li>Advanced vibration dampening system</li>
            </ul>
          </div>
        </div>

        {/* Power-off Protection */}
        <div class="group bg-white rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <div class="relative">
            <img src="/src/assets/MobileVechiles/key2.png" alt="Power Protection" class="w-full h-48 object-contain transition-transform duration-300 group-hover:scale-105"/>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-gray-800">Power-off Protection</h3>
            <ul class="list-disc pl-5 space-y-2 text-gray-600 text-sm">
              <li>Super-capacitor for smooth switch off</li>
              <li>5 seconds backup after power off</li>
              <li>ISO7637-2 certified</li>
              <li>Wide voltage input: 6-36V</li>
            </ul>
          </div>
        </div>

        {/* Temperature Protection */}
        <div class="group bg-white rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <div class="relative">
            <img src="/src/assets/MobileVechiles/key3.png" alt="Temperature Protection" class="w-full h-48 object-conatin transition-transform duration-300 group-hover:scale-105"/>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-gray-800">Temperature Protection</h3>
            <p class="text-gray-600">Working temperature: -30°C (heater optional) ~ +60°C for extreme conditions</p>
          </div>
        </div>

        {/* Continue with other features similarly */}
        <div class="group bg-white rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <div class="relative">
            <img src="/src/assets/MobileVechiles/key4.png" alt="Water Resistant" class="w-full h-48 object-contain transition-transform duration-300 group-hover:scale-105"/>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-gray-800">Water and Dust Resistant</h3>
            <p class="text-gray-600">IP6K9K-rated protection for maximum durability</p>
          </div>
        </div>

        <div class="group bg-white rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <div class="relative">
            <img src="/src/assets/MobileVechiles/key5.png" alt="G-Sensor" class="w-full h-48 object-contain transition-transform duration-300 group-hover:scale-105"/>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-gray-800">G-sensor</h3>
            <p class="text-gray-600">Built-in sensor for immediate detection of vehicle turnover and collision</p>
          </div>
        </div>

        <div class="group bg-white rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <div class="relative">
            <img src="/src/assets/MobileVechiles/key6.png" alt="Smart Scene" class="w-full h-48 object-contain transition-transform duration-300 group-hover:scale-105"/>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-gray-800">Smart Scene Adaptive</h3>
            <p class="text-gray-600">Automatic image adjustment for different light conditions</p>
          </div>
        </div>

        <div class="group bg-white rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <div class="relative">
            <img src="/src/assets/MobileVechiles/key7.png" alt="WDR" class="w-full h-48 object-contain transition-transform duration-300 group-hover:scale-105"/>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-3 text-gray-800">WDR Technology</h3>
            <p class="text-gray-600">120dB Wide Dynamic Range for optimal image quality in high contrast environments</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }
</style>

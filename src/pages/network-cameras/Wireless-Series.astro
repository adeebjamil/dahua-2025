  .video-card {
    cursor: pointer;
  }

  .video-card img {
    transition: transform 0.3s;
  }

  .video-card:hover img {
    transform: scale(1.05);
  }

  /* Update carousel styles */
  .carousel-container {
    overflow: hidden;
    background-color: #f3f4f6;
  }

  .carousel-slides {
    display: flex;
    width: 300%;
    transform: translateX(0);
    transition: transform 0.5s ease-in-out;
  }

  .carousel-slides img {

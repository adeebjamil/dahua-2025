---
import Layout from '../layouts/Layout.astro';
---

<Layout title="RMA - Return Merchandise Authorization">
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-blue-900 to-indigo-900">
    <div class="absolute inset-0 bg-[url('/patterns/circuit.svg')] opacity-10"></div>
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center text-white">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Return Merchandise Authorization</h1>
        <p class="text-xl text-blue-200 mb-8">Simple and efficient return process for your products</p>
      </div>
    </div>
  </section>

  <!-- Process Steps -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">RMA Process</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {[
          {
            step: "1",
            title: "Submit Request",
            description: "Fill out the RMA request form with your product details"
          },
          {
            step: "2",
            title: "Verification",
            description: "Our team will verify your request and provide RMA number"
          },
          {
            step: "3",
            title: "Return Product",
            description: "Ship the product back using the provided RMA number"
          }
        ].map(item => (
          <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-all">
            <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center text-xl font-bold mb-6">
              {item.step}
            </div>
            <h3 class="text-xl font-bold mb-4">{item.title}</h3>
            <p class="text-gray-600">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- RMA Form -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">Submit RMA Request</h2>
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
              <input type="text" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
              <input type="text" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
            <input type="email" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Product Model</label>
            <input type="text" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Serial Number</label>
            <input type="text" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Issue Description</label>
            <textarea rows="4" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
          </div>

          <button type="submit" class="w-full py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors">
            Submit Request
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto space-y-6">
        {[
          {
            question: "How long does the RMA process take?",
            answer: "The typical RMA process takes 5-7 business days from submission to approval."
          },
          {
            question: "What information do I need for RMA?",
            answer: "You'll need your product model, serial number, and proof of purchase."
          },
          {
            question: "How will I receive my RMA number?",
            answer: "Your RMA number will be sent to your email after request approval."
          }
        ].map(faq => (
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-lg font-semibold mb-2">{faq.question}</h3>
            <p class="text-gray-600">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

<!-- Contact Support -->
<section class="relative py-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900 via-indigo-900 to-purple-900"></div>
    <div class="absolute inset-0 bg-[url('/patterns/circuit.svg')] opacity-10 animate-pulse"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">Need Assistance?</h2>
          <p class="text-xl text-blue-200">Our dedicated support team is available 24/7</p>
        </div>
  
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Phone Support -->
          <div class="group bg-white/10 backdrop-blur-lg rounded-2xl p-8 hover:bg-white/20 transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-blue-500 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-4">Phone Support</h3>
            <p class="text-blue-200 text-center mb-6">Available 24/7 for urgent issues</p>
            <a href="tel:1234567890" class="flex items-center justify-center gap-2 text-white hover:text-blue-300 transition-colors">
              1-234-567-890
            </a>
          </div>
  
          <!-- Email Support -->
          <div class="group bg-white/10 backdrop-blur-lg rounded-2xl p-8 hover:bg-white/20 transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-purple-500 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-4">Email Support</h3>
            <p class="text-blue-200 text-center mb-6">Get detailed technical assistance</p>
            <a href="mailto:support@example.com" class="flex items-center justify-center gap-2 text-white hover:text-blue-300 transition-colors">
              support@example.com
            </a>
          </div>
  
          <!-- Live Chat -->
          <div class="group bg-white/10 backdrop-blur-lg rounded-2xl p-8 hover:bg-white/20 transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-indigo-500 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-4">Live Chat</h3>
            <p class="text-blue-200 text-center mb-6">Instant response during business hours</p>
            <button class="px-6 py-2 bg-indigo-500 text-white rounded-xl hover:bg-indigo-600 transition-colors">
              Start Chat
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
---
import Layout from '../../layouts/Layout.astro';
const title = "Revolutionizing Building Construction with Dahua CCTV Solutions in Saudi Arabia – Advanced Site Security";
const description = "Dahua CCTV systems are transforming security at construction sites across Saudi Arabia. As a trusted distributor, we provide state-of-the-art surveillance solutions specifically designed for building construction projects. Our CCTV cameras offer 24/7 monitoring with HD imaging, AI-powered analytics, and real-time alerts, ensuring site safety, theft prevention, and worker accountability. Dahua’s robust IP and wireless systems allow flexible installation for any construction environment, from small-scale projects to large industrial developments. Stay ahead of the curve with cutting-edge technology that not only enhances security but also streamlines project management and compliance. Protect your construction site with Dahua's powerful, reliable CCTV solutions in Saudi Arabia.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] bg-gradient-to-br from-gray-900 via-blue-900 to-gray-900 overflow-hidden">
    <div class="absolute inset-0 bg-[url('/src/assets/patterns/blueprint.svg')] opacity-5"></div>
    <div class="container mx-auto px-4 h-full flex items-center">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block px-4 py-1.5 bg-blue-500/20 text-blue-200 text-sm font-medium rounded-full mb-6 animate-fade-in">
          Building & Construction Solutions
        </span>
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 animate-fade-in-up">
          <span class="bg-gradient-to-r from-blue-400 to-blue-200 bg-clip-text text-transparent">
            Secure Your Construction Site
          </span>
        </h1>
        <p class="text-xl text-blue-100/90 max-w-2xl mx-auto leading-relaxed animate-fade-in-up delay-100 mb-8">
          Advanced security solutions for modern construction projects
        </p>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
          <!-- Security Card -->
          <div class="group">
            <div class="relative h-80 rounded-2xl overflow-hidden shadow-lg mb-6">
              <img 
                src="https://img.freepik.com/free-vector/security-isometric-infographics_1284-17493.jpg?ga=GA1.1.441471641.1730191836&semt=ais_hybrid" 
                alt="Construction Security" 
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
              <h3 class="absolute bottom-6 left-6 text-2xl font-bold text-white">Site Security</h3>
            </div>
            <ul class="space-y-4 text-gray-700">
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-blue-600 mt-1 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                <span class="text-lg">24/7 Surveillance with AI-powered detection</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-blue-600 mt-1 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                <span class="text-lg">Theft prevention and access control</span>
              </li>
            </ul>
          </div>

          <!-- Management Card -->
          <div class="group">
            <div class="relative h-80 rounded-2xl overflow-hidden shadow-lg mb-6">
              <img 
                src="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?auto=format&fit=crop&q=80" 
                alt="Project Management" 
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
              <h3 class="absolute bottom-6 left-6 text-2xl font-bold text-white">Smart Management</h3>
            </div>
            <ul class="space-y-4 text-gray-700">
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-green-600 mt-1 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
                <span class="text-lg">Real-time project monitoring and analytics</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-green-600 mt-1 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
                <span class="text-lg">Unified management platform</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Call to Action -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-3xl p-8 md:p-12 text-center text-white">
          <h2 class="text-3xl font-bold mb-4">Ready to Secure Your Site?</h2>
          <p class="text-blue-100 mb-8 max-w-2xl mx-auto">
            Get started with our advanced security solutions tailored for construction projects
          </p>
          <a 
            href="/Building-Construction/building-details" 
            class="inline-flex items-center px-8 py-3 bg-white text-blue-600 rounded-full hover:bg-blue-50 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Learn More
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <style>
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .animate-fade-in {
      animation: fadeIn 1s ease-out;
    }

    .animate-fade-in-up {
      animation: fadeIn 1s ease-out;
    }

    .delay-100 {
      animation-delay: 100ms;
    }
  </style>
</Layout>
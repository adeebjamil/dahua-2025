      features: [
        'High thermal sensitivity <0.035°C',
        'Advanced fire detection algorithms',
        'Long-range surveillance up to 2km',
        'IP67 Weather-resistant design',
        'Built-in deep learning analytics',
        'Dual-spectrum imaging'
      ],
      specifications: {
        resolution: '640 × 512',
        focalLength: '75mm',
        frameRate: '50Hz',
        detection: 'Up to 2km',
        sensitivity: '<0.035°C',
        protection: 'IP67'
      }
    },
    sentinel: {
      id: 'sentinel',
      name: 'Sentinel Pro',
      image: "https://plus.unsplash.com/premium_vector-1711987867917-9f139986137a?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8Y2N0dnxlbnwwfHwwfHx8MQ%3D%3D",
      description: 'Professional-grade thermal camera with enhanced night vision capabilities.',
      features: [
        'Dual-lens technology',
        'Night vision up to 500m',

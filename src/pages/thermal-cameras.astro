---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative h-[90vh] overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://images.unsplash.com/photo-1581092160562-40aa08e78837?auto=format&fit=crop&q=80"
        alt="Thermal Imaging Solutions" 
        class="w-full h-full object-cover transform scale-105 animate-slow-zoom"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-blue-900/95 via-blue-900/85 to-transparent"></div>
      <div class="absolute inset-0 bg-[url('/src/assets/patterns/grid.svg')] opacity-10"></div>
    </div>
    
    <div class="relative container mx-auto px-4 h-full flex items-center">
      <div class="max-w-2xl text-white space-y-8">
        <span class="inline-flex items-center px-5 py-2.5 bg-blue-500/20 rounded-full text-blue-200 text-sm font-medium backdrop-blur-sm animate-fade-in-up">
          <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 animate-pulse"></span>
          Advanced Thermal Technology
        </span>
        
        <h1 class="text-6xl font-bold leading-tight animate-fade-in-up">
          Thermal Imaging
          <span class="block mt-2 bg-gradient-to-r from-blue-400 to-blue-200 bg-clip-text text-transparent">
            Next-Gen Detection
          </span>
        </h1>
        
        <p class="text-xl text-blue-100/90 animate-fade-in-up delay-200 max-w-xl leading-relaxed">
          Ultra-sensitive thermal detection with AI-powered analytics for superior threat identification
        </p>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-24 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-bold mb-4">Our Solutions</h2>
        <div class="w-24 h-1 bg-blue-600 mx-auto rounded-full mb-6"></div>
        <p class="text-gray-600 text-lg">Advanced thermal imaging solutions for enhanced detection and monitoring</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {products.map(product => (
          <div class="group bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1">
            <div class="relative aspect-[4/3] overflow-hidden bg-gradient-to-br from-gray-900 to-gray-800 p-6">
              <img 
                src={product.image} 
                alt={product.name}
                class="w-full h-full object-contain transform group-hover:scale-105 transition-all duration-500 drop-shadow-xl"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>
            
            <div class="p-8">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-2xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
                  {product.name}
                </h3>
                <span class="px-4 py-1.5 bg-blue-100 text-blue-600 text-sm font-medium rounded-full">
                  Thermal
                </span>
              </div>
              
              <p class="text-gray-600 mb-6 line-clamp-2">{product.description}</p>
              
              <div class="grid grid-cols-3 gap-4 mb-8">
                {product.highlights.map(highlight => (
                  <div class="text-center">
                    <div class="w-12 h-12 mx-auto mb-2 rounded-full bg-blue-50 flex items-center justify-center text-blue-600">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        {/* Add appropriate SVG paths for each icon */}
                      </svg>
                    </div>
                    <span class="text-sm text-gray-600">{highlight.label}</span>
                  </div>
                ))}
              </div>

              <button 
                class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-3.5 rounded-xl hover:from-blue-700 hover:to-blue-800 transform hover:scale-[1.02] transition-all duration-300 shadow-md hover:shadow-xl flex items-center justify-center gap-2 font-medium product-detail-btn"
                data-product-id={product.id}
              >
                Explore Features
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Modal Component -->
  <div id="productModal" class="fixed inset-0 bg-black/50 hidden z-50">
    <div class="fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-4xl bg-white rounded-2xl shadow-2xl">
      <div class="relative p-6 max-h-[90vh] overflow-y-auto">
        <!-- Close Button -->
        <button class="close-modal absolute top-4 right-4 text-gray-500 hover:text-gray-700 z-10">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <!-- Modal Content -->
        <div class="space-y-6">
          <div class="flex items-start gap-6">
            <div class="w-1/2">
              <img id="modalImage" src="" alt="" class="w-full rounded-lg">
            </div>
            <div class="w-1/2">
              <h2 id="modalTitle" class="text-3xl font-bold text-gray-900 mb-4"></h2>
              <p id="modalDescription" class="text-gray-600 mb-6"></p>
              
              <div class="space-y-4">
                <h3 class="text-xl font-semibold text-gray-900">Key Features</h3>
                <ul id="modalFeatures" class="list-disc list-inside text-gray-600 space-y-2"></ul>
              </div>
            </div>
          </div>

          <div class="mt-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Technical Specifications</h3>
            <div id="modalSpecs" class="grid grid-cols-2 gap-4"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>

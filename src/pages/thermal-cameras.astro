    eureka: {
      id: 'eureka',
      name: 'Eureka Series',
      image: "https://plus.unsplash.com/premium_vector-1731987428190-9ee872f5e8db?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8Y2N0dnxlbnwwfHwwfHx8MQ%3D%3D",

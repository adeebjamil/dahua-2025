---
import Layout from '../layouts/Layout.astro';
const  title = "Network Cameras | Security Solutions";
const description = "Wholesale Dahua IP cameras in Saudi Arabia. High-quality security solutions for businesses & homes. Competitive pricing & fast delivery. Order now"
---

<Layout title={title} description={description}>
  <!-- Hero Section - Increased height and text size -->
  <section class="relative min-h-[80vh] flex items-center bg-gradient-to-r from-gray-900 via-blue-900 to-indigo-900 py-40">
    <div class="absolute inset-0 bg-[url('/patterns/circuit.svg')] opacity-10 animate-pulse"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-5xl mx-auto text-center">
        <h1 class="text-7xl font-bold mb-10 text-white tracking-tight [text-shadow:_0_4px_12px_rgb(0_0_0_/_20%)]">
          Network Cameras
        </h1>
        <p class="text-3xl text-gray-200 leading-relaxed">
          Cutting-edge surveillance solutions powered by AI and deep learning
        </p>
        <div class="mt-16">
          <a href="#products" class="inline-flex items-center gap-3 bg-white text-blue-900 px-10 py-5 rounded-full text-xl font-semibold hover:bg-blue-50 transition-all transform hover:scale-105">
            Explore Products
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Innovation Section - Increased text and padding -->
  <section class="py-40 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-24">
          <h2 class="text-6xl font-bold mb-8 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">
            Innovation Leadership
          </h2>
          <div class="w-32 h-2 bg-gradient-to-r from-blue-600 to-indigo-600 mx-auto rounded-full"></div>
        </div>

        <!-- Feature cards with increased padding and text size -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-10">
          {[
            {
              title: "Multi-sensor Panoramic",
              description: "360° coverage with multiple sensors",
              icon: `<svg class="w-12 h-12" fill="none" stroke="red" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>`
            },
            {
              title: "ePoE Technology",
              description: "800m power & data transmission",
              icon: `<svg class="w-12 h-12" fill="none" stroke="blue" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>`
            },
            {
              title: "AI Codec",
              description: "Improved encoding efficiency",
              icon: `<svg class="w-12 h-12" fill="none" stroke="green" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
              </svg>`
            },
            {
              title: "Deep Learning",
              description: "Accurate & reliable algorithms",
              icon: `<svg class="w-12 h-12" fill="none" stroke="yellow" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.871 4A17.926 17.926 0 003 12c0 2.874.673 5.59 1.871 8m14.13 0a17.926 17.926 0 001.87-8c0-2.874-.673-5.59-1.87-8M9 9h1.246a1 1 0 01.961.725l1.586 5.55a1 1 0 00.961.725H15"/>
              </svg>`
            }
          ].map(feature => (
            <div class="feature-card group bg-white p-12 rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-blue-200">
              <div class="text-blue-600 mb-10 group-hover:scale-110 transition-transform duration-500" set:html={feature.icon} />
              <h3 class="font-bold text-2xl mb-4 text-gray-800">{feature.title}</h3>
              <p class="text-lg text-gray-600 leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>

        <!-- Product Series - Enhanced design -->
        <div class="mt-32 bg-white rounded-[2.5rem] p-12 shadow-xl border border-gray-100">
          <h3 class="text-3xl font-bold mb-12 text-center">Multiple Product Levels</h3>
          <div class="grid md:grid-cols-3 gap-10">
            {[
              {
                series: "WizMind Series",
                target: "Innovation-focused professionals",
                feature: "Latest technology & best quality"
              },
              {
                series: "WizSense Series",
                target: "Cost-conscious professionals",
                feature: "Balanced performance & price"
              },
              {
                series: "Lite Series",
                target: "Budget-conscious customers",
                feature: "Quality within budget constraints"
              }
            ].map(series => (
              <div class="relative bg-gray-50 p-10 rounded-2xl hover:bg-gradient-to-br from-blue-50 to-indigo-50 transition-all duration-500 transform hover:-translate-y-2">
                <div class="absolute top-4 right-4 flex gap-2">
                  <div class="w-3 h-3 rounded-full bg-red-500"></div>
                  <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                  <div class="w-3 h-3 rounded-full bg-green-500"></div>
                </div>
                <h4 class="text-2xl font-bold text-blue-600 mb-6">{series.series}</h4>
                <p class="text-gray-800 font-medium mb-4">{series.target}</p>
                <p class="text-gray-600 leading-relaxed">{series.feature}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Grid - Increased card sizes -->
  <section id="products" class="py-32 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-20">Our Products</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {[
          {
            name: "WizMind Series",
            image: "/src/assets/NetworkCameras/img1.png",
            description: "Advanced AI-powered cameras for professionals demanding innovation",
            page: "/network-cameras/WizMind-Series",
            rating: 5
          },
          {
            name: "WizSense Series", 
            image: "/src/assets/NetworkCameras/img2.png",
            description: "Perfect balance of cost and performance",
            page: "/network-cameras/WizSense-Series",
            rating: 4.5
          },
          {
            name: "Pro Series",
            image: "/src/assets/NetworkCameras/img3.png", 
            description: "Professional-grade surveillance solutions",
            page: "/network-cameras/Pro-Series",
            rating: 5
          },
          {
            name: "Lite Series",
            image: "/src/assets/NetworkCameras/img4.png",
            description: "Quality solutions for budget-conscious customers",
            page: "/network-cameras/Lite-Series",
            rating: 4.5
          },
          {
            name: "Panoramic Series",
            image: "/src/assets/NetworkCameras/img5.png",
            description: "360° surveillance coverage",
            page: "/network-cameras/Panoramic-Series",
            rating: 5
          },
          {
            name: "Special Series",
            image: "/src/assets/NetworkCameras/img6.png",
            description: "Specialized solutions for unique requirements",
            page: "/network-cameras/Special-Series",
            rating: 4.5
          },
          {
            name: "WizMind S Series",
            image: "/src/assets/NetworkCameras/img7.png",
            description: "Smart surveillance with enhanced features",
            page: "/network-cameras/WizMindS-Series",
            rating: 5
          },
          {
            name: "WizMind X Series",
            image: "/src/assets/NetworkCameras/img8.png",
            description: "Premium AI-powered security solutions",
            page: "/network-cameras/WizMindX-Series",
            rating: 5
          },
          {
            name: "Wireless Series",
            image: "/src/assets/NetworkCameras/img9.png",
            description: "Flexible wireless surveillance options",
            page: "/network-cameras/Wireless-Series",
            rating: 4.5
          }
        ].map(product => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2">
            <div class="p-4">
              <div class="flex justify-end mb-1">
                <div class="flex items-center">
                  {Array.from({ length: Math.floor(product.rating) }).map(() => (
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                  {product.rating % 1 !== 0 && (
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <defs>
                        <linearGradient id="half-star">
                          <stop offset="50%" stop-color="currentColor"/>
                          <stop offset="50%" stop-color="#e5e7eb"/>
                        </linearGradient>
                      </defs>
                      <path fill="url(#half-star)" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  )}
                </div>
              </div>
              <div class="flex items-center gap-1 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
                <h3 class="text-lg font-bold">{product.name}</h3>
              </div>
              <div class="aspect-square bg-gray-50 rounded-lg mb-3 flex items-center justify-center overflow-hidden">
                <img 
                  src={product.image} 
                  alt={product.name}
                  class="object-contain h-40 w-40 hover:scale-110 transition-transform duration-500"
                />
              </div>
              <p class="text-gray-600 mb-3 leading-relaxed text-sm">{product.description}</p>
              <a 
                href={product.page}
                class="inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition-all transform hover:scale-105 text-sm"
              >
                Learn More
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Applications Section - Enhanced with icons and better spacing -->
  <section class="py-32 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-20">Applications</h2>
      <div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
        <div class="bg-gray-50 p-10 rounded-2xl hover:shadow-lg transition-all duration-500 relative">
          <!-- Added Badge -->
          <div class="absolute -top-4 -right-4 bg-yellow-400 text-gray-900 px-4 py-1 rounded-full font-bold flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
            #1 Choice
          </div>
          <h3 class="text-2xl font-bold mb-8 text-blue-600">Smart Retail Solutions</h3>
          <ul class="space-y-4">
            <li class="flex items-center gap-3">
              <span class="text-blue-600 text-2xl">•</span>
              <span class="text-gray-700">People counting for traffic analysis</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="text-blue-600 text-2xl">•</span>
              <span class="text-gray-700">Business intelligence</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="text-blue-600 text-2xl">•</span>
              <span class="text-gray-700">Operational efficiency</span>
            </li>
          </ul>
        </div>
        <div class="bg-gray-50 p-10 rounded-2xl hover:shadow-lg transition-all duration-500 relative">
          <!-- Added Badge -->
          <div class="absolute -top-4 -right-4 bg-yellow-400 text-gray-900 px-4 py-1 rounded-full font-bold flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
            #1 Rated
          </div>
          <h3 class="text-2xl font-bold mb-8 text-blue-600">24/7 Surveillance</h3>
          <ul class="space-y-4">
            <li class="flex items-center gap-3">
              <span class="text-blue-600 text-2xl">•</span>
              <span class="text-gray-700">Full-color night monitoring</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="text-blue-600 text-2xl">•</span>
              <span class="text-gray-700">Low-light performance</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="text-blue-600 text-2xl">•</span>
              <span class="text-gray-700">Accurate target identification</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .prose ul {
    list-style-type: none;
    padding: 0;
  }
  
  /* Add smooth scrolling */
  html {
    scroll-behavior: smooth;
  }
</style>
